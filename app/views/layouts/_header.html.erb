<div class="header">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <li><%= link_to t(".project"), root_path, class: "project2" %></li>
      </div>
      <div class="collapse navbar-collapse" id="menu">
        <ul class="nav navbar-nav navbar-right" >
          <li>
            <%= form_tag posts_path, method: :get, class: "navbar-form navbar-right" do %>
              <%= text_field_tag :search, params[:search],
                placeholder: t(".search"), class: "form-control" %>
            <% end %>
          </li>
          <li><%= link_to t(".introduce"), introduce_path, class: "introduce" %></li>
          <% if user_signed_in? %>
            <li><%= link_to t(".all_users"), users_path %></li>
            <li class="dropdown">
              <%= link_to "#", class: "dropdown-toggle", data: {toggle: :dropdown} do %>
                <%= t ".account" %><b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), current_user %></li>
                <li><%= link_to t(".settings"), edit_user_registration_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".log_out"), destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <%= link_to t(".log_in"), new_user_session_path,
              class: "btn btn-success navbar-btn navbar-right" %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>
