<div class="login-all container ">
  <% provide :title, t(".log_in") %>
  <h1><%= t ".log_in" %></h1>

  <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, placeholder: t(".your_email"), class: "your-email" %>

    <%= f.password_field :password, autocomplete: "off", placeholder: t(".your_password"), class: "your-password" %>

    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %>
      <span class="remember-me"><%= t ".remember_me" %></span>
    <% end -%>

    <%= f.submit t(".log_in"),class: "btn btn-primary " %>
  <% end %>
</div>
