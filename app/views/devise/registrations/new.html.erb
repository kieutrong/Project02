<div class="signup-all container">
  <% provide :title, t(".sign_up") %>
  <h1><%= t ".sign_up" %></h1>

  <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
    <%= devise_error_messages! %>

    <%= f.text_field :name, class: "form-control", placeholder: t(".your_name") %>

    <%= f.email_field :email, class: "form-control", placeholder: t(".your_email") %>

    <%= f.password_field :password, class: "form-control", placeholder: t(".your_password") %>

    <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".comfirm_password") %>

    <%= f.submit t(".create_my_account"), class: "btn btn-primary " %>
  <% end %>
</div>
