<div class="edit-user-all container">
  <h1><%= t ".edit_user" %></h1>

  <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {method: :put} do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.label :email, class: "hide" %><br />
    <%= f.email_field :email, autofocus: true, class: "field", placeholder: t(".your_email") %>

    <%= f.label :password, class: "hide" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "field", placeholder: t(".password") %>

    <%= f.label :password_confirmation, class: "hide" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "field", placeholder: t(".password_confirmation") %>

    <%= f.label :current_password, class: "hide" %><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "field", placeholder: t(".current_password") %>

    <%= f.submit t(".update"), class: "actions btn btn-lg btn-success" %>
  <% end %>
</div>
