<div class="all-show-user">
  <% provide :title, t(".all_users") %>
  <h1><%= t ".all_users" %></h1>

  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= gravatar_for user %>
        <%= link_to user.name, user, class: "user-name" %>
        <% if current_user.is_admin? && current_user != user %>
         | <%= link_to t(".delete"), user, method: :delete,
            data: {confirm: t(".confirm")}, class: "delete-user" %>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= paginate @users, theme: "twitter-bootstrap-3" %>
</div>
