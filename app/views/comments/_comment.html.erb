<div class="user-comment" id="comment_<%= comment.id %>">
  <%= link_to gravatar_for(comment.user), comment.user %>
  <%= link_to comment.user.name, comment.user, class: "user-commented" %>
  <span class="content-commented"><%= comment.content %></span>
  <span class="time-of-comment"> | <%= time_ago_in_words comment.created_at %> | </span>

  <% if user_signed_in? and current_user.is_user? comment.user%>
    <%= link_to t(".edit"), edit_post_comment_path(comment.post, comment),
      id: "edit_comment" %>

    <%= link_to t(".delete"), [comment.post, comment],
      method: :delete, remote: true, class: "delete-comment",
      data: {confirm: t(".you_sure")} %>
  <% end %>
</div>
